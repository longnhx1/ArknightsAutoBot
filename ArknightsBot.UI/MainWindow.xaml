<Window x:Class="ArknightsBot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arknights Bot Control" Height="300" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="btnTest" Content="Test Connection" Width="150" Height="40" Click="btnTest_Click"/>
            <TextBox Name="txtLog" Height="150" Width="400" Margin="0,20,0,0" 
                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>