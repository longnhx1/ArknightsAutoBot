<Window x:Class="ArknightsBot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Arknights Auto Bot Pro v1.0" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#09090b" Foreground="#e2e8f0">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1c1917"/>
            <Setter Property="BorderBrush" Value="#292524"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#f8fafc"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="0,5,5,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#0c0a09"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#44403c"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#292524"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#44403c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1c1917"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Task Selection" Style="{StaticResource HeaderStyle}" Grid.Row="0"/>

                <StackPanel Grid.Row="1">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="chkAutoExit" Grid.Column="0" IsChecked="True"/>
                        <TextBlock Grid.Column="1" Text="Auto Exit Loop" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="8,0,0,0"/>
                        <Button Grid.Column="2" Content="⚙️" Background="Transparent" Foreground="#64748b"/>
                    </Grid>

                    <Grid Margin="0,5" Opacity="0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="chkAutoRecruit" Grid.Column="0" IsEnabled="False"/>
                        <TextBlock Grid.Column="1" Text="Auto Recruit (Coming Soon)" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        <Button Grid.Column="2" Content="⚙️" Background="Transparent" Foreground="#64748b"/>
                    </Grid>

                    <Grid Margin="0,5" Opacity="0.5">
                        <CheckBox Grid.Column="0" IsEnabled="False"/>
                        <TextBlock Text="Auto I.S (Coming Soon)" VerticalAlignment="Center" Margin="25,0,-17,0"/>
                        <Button Content="⚙️" Background="Transparent" Foreground="#64748b" Margin="218,10,0,10"/>
                    </Grid>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnStart" Grid.Column="0" Content="START" Background="#22c55e" FontWeight="Bold" Click="BtnStart_Click"/>
                    <Button x:Name="btnStop" Grid.Column="2" Content="STOP" Background="#ef4444" FontWeight="Bold" Click="BtnStop_Click"/>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Configuration" Style="{StaticResource HeaderStyle}" Grid.Row="0"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                    <StackPanel>
                        <Label Content="ADB Connection Address"/>
                        <TextBox x:Name="txtAdbAddress" Text="127.0.0.1:16384" Margin="0,0,0,15"/>

                        <Label Content="MuMu Root Folder (Cho Enhanced Mode)"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtMumuPath" Grid.Column="0" Text="D:\Program Files\MuMuPlayer-12.0"/>
                            <Button x:Name="btnBrowseMumu" Grid.Column="1" Content="Browse" Margin="10,0,0,0" Background="#44403c" Click="BtnBrowseMumu_Click"/>
                        </Grid>

                        <CheckBox x:Name="chkEnhancedMode" Content="Enable Screenshot Enhancement (Siêu tốc)" IsChecked="True" Foreground="#3b82f6" FontWeight="SemiBold" Margin="0,0,0,20"/>

                        <Separator Background="#292524" Margin="0,0,0,20"/>

                        <TextBlock Text="Delay Settings (seconds)" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Delay Start (Click Green)" VerticalAlignment="Center"/>
                            <TextBox x:Name="numStart" Grid.Row="0" Grid.Column="1" Text="2" HorizontalContentAlignment="Center"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Delay Squad (Click Red)" VerticalAlignment="Center"/>
                            <TextBox x:Name="numSquad" Grid.Row="1" Grid.Column="1" Text="1" HorizontalContentAlignment="Center"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Delay Settings (Click Gear)" VerticalAlignment="Center"/>
                            <TextBox x:Name="numSettings" Grid.Row="2" Grid.Column="1" Text="0.5" HorizontalContentAlignment="Center"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="Delay Retreat" VerticalAlignment="Center"/>
                            <TextBox x:Name="numRetreat" Grid.Row="3" Grid.Column="1" Text="0.2" HorizontalContentAlignment="Center"/>

                            <Label Grid.Row="4" Grid.Column="0" Content="Delay Confirm" VerticalAlignment="Center"/>
                            <TextBox x:Name="numConfirm" Grid.Row="4" Grid.Column="1" Text="0.2" HorizontalContentAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <Button x:Name="btnSave" Grid.Row="2" Content="Save Configuration" Background="#3b82f6" Margin="0,20,0,0" FontWeight="Bold" Click="BtnSave_Click"/>
            </Grid>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="System Logs" Style="{StaticResource HeaderStyle}" Grid.Row="0"/>

                <Border Grid.Row="1" Background="#000000" CornerRadius="4" BorderBrush="#333" BorderThickness="1" Padding="10">
                    <ScrollViewer x:Name="scrollViewerLogs" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="txtLogs" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap" Foreground="#a3a3a3">
                            <Run Foreground="#22c55e" Text="[SYSTEM] Bot is ready."/><LineBreak/>
                        </TextBlock>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>